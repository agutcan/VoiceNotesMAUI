<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceNotesMAUI.MVVM.Views.MainPage"
             BackgroundColor="{StaticResource ColorFondo}">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Header -->
        <Border BackgroundColor="{StaticResource ColorTarjeta}"
            StrokeShape="RoundRectangle 12"
            StrokeThickness="0"
            Padding="15"
            Shadow="0,5,10,Gray">
            <Label Text="📝 Mis notas"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{StaticResource ColorTexto}" />
        </Border>

        <!-- Search Bar -->
        <SearchBar Placeholder="Buscar notas..."
                   Text="{Binding FiltroTexto}"
                   FontSize="16"
                   BackgroundColor="{StaticResource ColorTarjeta}"
                   TextColor="{StaticResource ColorTexto}"
                   CancelButtonColor="{StaticResource ColorPrimario}" />

        <!-- Mensaje cuando no hay notas -->
        <Label Text="No hay notas disponibles"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="{StaticResource ColorTexto}"
               IsVisible="{Binding SinNotasFiltradas}" />

        <!-- Lista de notas -->
        <CollectionView
            ItemsSource="{Binding NotasFiltradas}"
            SelectionMode="Single"
            SelectionChanged="OnNotaSeleccionada">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="{StaticResource ColorTarjeta}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="0"
                        Padding="10"
                        Shadow="0,5,10,Gray">

                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                            <!-- Texto de la nota -->
                            <Label Text="{Binding Texto}"
                               FontSize="16"
                               TextColor="{StaticResource ColorTexto}"
                               VerticalOptions="Center"
                               Grid.Column="0" />

                            <!-- Botón eliminar -->
                            <Button Text="🗑️"
                                FontSize="16"
                                BackgroundColor="#FF4C4C"
                                TextColor="White"
                                CornerRadius="10"
                                Clicked="OnEliminarNota"
                                Grid.Column="1" />
                        </Grid>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <!-- Botón agregar nota -->
        <Button Text="➕ Agregar nota"
                FontSize="18"
                BackgroundColor="{StaticResource ColorPrimario}"
                TextColor="White"
                CornerRadius="10"
                Shadow="0,5,10,Gray"
                Clicked="OnAgregarNota" />

    </VerticalStackLayout>
</ContentPage>
