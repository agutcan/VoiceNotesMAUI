<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceNotesMAUI.MVVM.Views.NoteDetailPage"
             BackgroundColor="{StaticResource ColorFondo}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Tarjeta de nota -->
        <ScrollView>
            <Border BackgroundColor="{StaticResource ColorTarjeta}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0"
                    Padding="20"
                    >
                <Label Text="{Binding TextoNota}"
                       FontSize="18"
                       LineBreakMode="WordWrap"
                       TextColor="{StaticResource ColorTexto}" />
            </Border>
        </ScrollView>

        <!-- Fecha y hora -->
        <Label Text="{Binding FechaCreacion, StringFormat='Creada: {0:dd/MM/yyyy HH:mm}'}"
               FontSize="14"
               TextColor="{StaticResource ColorTexto}" />

        <!-- Botón reproducir -->
        <Button Text="🔊 Reproducir nota"
                FontSize="18"
                BackgroundColor="{StaticResource ColorVoz}"
                TextColor="White"
                CornerRadius="10"
                
                Clicked="OnReproducirNota" />

    </VerticalStackLayout>
</ContentPage>
