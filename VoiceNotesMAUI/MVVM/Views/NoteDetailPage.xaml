<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceNotesMAUI.MVVM.Views.NoteDetailPage"
             BackgroundColor="{StaticResource ColorFondo}">

    <Grid RowDefinitions="Auto, *" Padding="30">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" ColumnSpacing="20" Margin="0,0,0,25">
            <Border Grid.Column="0" HeightRequest="45" WidthRequest="45" StrokeThickness="0" BackgroundColor="{StaticResource ColorTarjeta}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="22.5" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Offset="0,3" Radius="6" Opacity="0.15" Brush="Black" />
                </Border.Shadow>
                <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                    <Label Text="←" FontSize="24" TextColor="{StaticResource ColorPrimario}"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,3" />
                    <ImageButton BackgroundColor="Transparent" Clicked="OnVolverClicked" />
                </Grid>
            </Border>

            <VerticalStackLayout Grid.Column="1">
                <Label Text="📖 LECTURA" FontSize="12" TextColor="{StaticResource ColorPrimario}"
                       FontAttributes="Bold" CharacterSpacing="2" />
                <Label Text="Detalle" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource ColorTexto}" />
            </VerticalStackLayout>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="25">
                <Border StrokeThickness="0" BackgroundColor="{StaticResource ColorTarjeta}" Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Offset="0,10" Radius="20" Opacity="0.1" Brush="Black" />
                    </Border.Shadow>

                    <Label Text="{Binding TextoNota}" FontSize="20" LineHeight="1.5" TextColor="{StaticResource ColorTexto}" />
                </Border>

                <Button Text="🔊 Reproducir nota en voz alta" 
                        FontSize="18" 
                        FontAttributes="Bold"
                        BackgroundColor="{StaticResource ColorVoz}" 
                        TextColor="White" 
                        HeightRequest="65"
                        CornerRadius="18" 
                        Clicked="OnReproducirNota">
                    <Button.Shadow>
                        <Shadow Offset="0,6" Radius="15" Opacity="0.3" Brush="{StaticResource ColorVoz}" />
                    </Button.Shadow>
                </Button>

                <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,10,0,20">
                    <Label Text="🕒" VerticalOptions="Center" />
                    <Label Text="{Binding FechaCreacion, StringFormat='Creada el {0:dd/MM/yyyy} a las {0:HH:mm}'}"
                           TextColor="Gray" FontSize="14" VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>