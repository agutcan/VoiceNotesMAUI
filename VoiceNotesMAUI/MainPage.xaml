<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VoiceNotesMAUI.MainPage"
    Title="Mis Notas">

    <StackLayout Padding="20">
        <Button Text="Agregar Nota" Clicked="OnAddNoteClicked" />
        <CollectionView x:Name="NotesCollection" SelectionMode="Single" SelectionChanged="OnNoteSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" FontSize="18" Padding="10"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>

